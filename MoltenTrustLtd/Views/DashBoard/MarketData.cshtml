@model DataLibrary.Models.MarketData
@{
    ViewData["Title"] = "MarketData";
}

<h1 class="text-center mt-5">MarketData</h1>

<div class="row d-flex justify-content-center mt-2">
    <div class="col-lg-6">
        <div class="card text-center">
            <div class="card-header font-weight-bold text-danger">
                Market Data
            </div>
            <div class="card-body">
                <form method="post">

                    <div class="form-group">
                        <label asp-for="AllShareIndex">ASI</label>
                        <input type="number" asp-for="AllShareIndex" class="form-control" id="asi" placeholder="All Shares Index">
                    </div>

                    <div class="form-group">
                        <label for="inputAddress2">Bond Capitalization</label>
                        <input type="number" class="form-control" id="bond" placeholder="BondCap">
                    </div>
                    <div class="form-group">
                        <label asp-for="BondCap">ETF Capitalization</label>
                        <input asp-for="BondCap" type="number" class="form-control" id="bond" placeholder="ETFCap">
                    </div>

                    <div class="form-group">
                        <label asp-for="Date">Date</label>
                        <input asp-action="Date" type="datetime-local" class="form-control" id="Date" placeholder="Date">
                    </div>

                    <a class="btn mt-3 btn-block" asp-action="MarketData" asp-controller="DashBoard">Upload</a>
                </form>
            </div>
        </div>
    </div>
</div>